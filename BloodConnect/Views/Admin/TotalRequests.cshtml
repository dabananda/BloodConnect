@model List<BloodConnect.Models.BloodRequest>

<h3>Total Blood Requests</h3>

<table class="table table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <th>Requestor</th>
            <th>Donor</th>
            <th>Status</th>
            <th>Request Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var req in Model)
        {
            <tr>
                <td>@req.Requestor.FullName</td>
                <td>@req.Donor.FullName</td>
                <td>@req.Status</td>
                <td>@req.RequestDate.ToString("dd MMM yyyy")</td>
            </tr>
        }
    </tbody>
</table>
