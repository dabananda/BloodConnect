@model BloodConnect.Models.ApplicationUser

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <!-- Profile Picture -->
    <div class="text-center">
        <img src="@(Model.ProfilePictureUrl ?? " /images/default_user.png")" alt="@Model.FullName" class="profile-picture img-thumbnail" />
        <h2 class="mt-3 text-danger">@Model.FullName</h2>
        <p class="text-muted mb-0">Blood Group: @Model.BloodGroup</p>
        <p class="text-muted">Available: @(Model.IsAvailable == true ? "YES" : "NO")</p>
        <a asp-action="Edit" class="btn btn-danger me-2">Edit Profile</a>
    </div>

    <!-- Personal Information -->
    <div class="row justify-content-center my-5">
        <div class="col-md-10 shadow p-4 rounded">
            <h3 class="text-danger mb-3">Personal Information</h3>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Full Name</th>
                        <td>@Model.FullName</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th>Current Address</th>
                        <td>@(!string.IsNullOrWhiteSpace(Model.CurrentAddress) ? Model.CurrentAddress : "N/A")</td>
                    </tr>
                    <tr>
                        <th>Department</th>
                        <td>@Model.Department</td>
                    </tr>
                    <tr>
                        <th>Session</th>
                        <td>@Model.Session</td>
                    </tr>
            </table>
        </div>
    </div>
</div>
