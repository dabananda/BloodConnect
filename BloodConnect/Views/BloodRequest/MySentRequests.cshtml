@model List<BloodConnect.Models.BloodRequest>

@{
    ViewData["Title"] = "My Sent Requests";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-md-9 mx-auto">
            <h2 class="text-danger mb-4">📤 My Sent Blood Requests</h2>

            @if (Model.Any())
            {
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Donor Name</th>
                            <th>Request Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>@request.Donor.FullName</td>
                                <td>@request.RequestDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    @switch (request.Status)
                                    {
                                        case BloodConnect.Models.RequestStatus.Pending:
                                            <span class="badge bg-warning text-dark">Pending</span>
                                            break;
                                        case BloodConnect.Models.RequestStatus.Accepted:
                                            <span class="badge bg-success">Accepted</span>
                                            break;
                                        case BloodConnect.Models.RequestStatus.Completed:
                                            <span class="badge bg-primary">Completed</span>
                                            break;
                                        case BloodConnect.Models.RequestStatus.Declined:
                                            <span class="badge bg-danger">Declined</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (request.Status == BloodConnect.Models.RequestStatus.Accepted)
                                    {
                                        <a asp-action="MarkAsCompleted" asp-route-id="@request.Id" class="btn btn-sm btn-success">
                                            Mark as Completed
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    You have not sent any blood requests yet.
                </div>
            }
        </div>
    </div>
</div>
