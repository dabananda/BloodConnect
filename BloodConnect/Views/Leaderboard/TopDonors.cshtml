@model List<BloodConnect.Models.ApplicationUser>

@{
    ViewData["Title"] = "Top Donors Leaderboard";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10">
            <h2 class="text-danger mb-4">🏆 Top 10 Blood Donors Leaderboard</h2>

            <table class="table table-hover table-striped text-center shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Rank</th>
                        <th>Donor Name</th>
                        <th>Total Points</th>
                        <th>Title</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var rank = 1;
                        foreach (var donor in Model)
                        {
                            string title = "";
                            string rowClass = "";

                            if (rank == 1)
                            {
                                title = "🥇 Blood Hero";
                                rowClass = "table-warning";
                            }
                            else if (rank == 2)
                            {
                                title = "🥈 Elite Donor";
                                rowClass = "table-secondary";
                            }
                            else if (rank == 3)
                            {
                                title = "🥉 Blood Knight";
                                rowClass = "table-danger";
                            }
                            else
                            {
                                title = "-";
                                rowClass = "";
                            }
                            <tr class="@rowClass fw-semibold">
                                <td>@rank</td>
                                <td>@donor.FullName</td>
                                <td><span class="badge bg-success fs-6">@donor.TotalPoints</span></td>
                                <td>@title</td>
                            </tr>
                            rank++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
