@page
@model RegisterConfirmationModel

<h1>@ViewData["Title"]</h1>
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="text-center shadow p-5 rounded" style="max-width: 500px; width: 100%;">
        <i class="fas fa-envelope-circle-check fa-4x text-success mb-4"></i>

        <h2 class="text-danger mb-3"><i class="bi bi-patch-check-fill"></i> Confirm Your Email</h2>

        <p class="lead mb-4">
            A confirmation link has been sent to your email address.
            Please check your inbox or spam folder and click the link to activate your account.
        </p>

        <a href="/Identity/Account/Login" class="btn btn-outline-danger">
            Go to Login <i class="fa-solid fa-arrow-right ms-1"></i>
        </a>

        <p class="mt-4 text-muted small">
            Didn't receive the email? Please check your spam folder.
        </p>
    </div>
</div>
